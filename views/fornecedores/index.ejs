<h1>Fornecedores</h1>
<a href="/fornecedores/new" class="btn btn-primary mb-3">Novo Fornecedor</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Nome</th>
            <th>CNPJ</th>
            <th>Email</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        <% fornecedores.forEach(fornecedor=> { %>
            <tr>
                <td>
                    <%= fornecedor.nome %>
                </td>
                <td>
                    <%= fornecedor.cnpj %>
                </td>
                <td>
                    <%= fornecedor.email %>
                </td>
                <td>
                    <a href="/fornecedores/<%= fornecedor.id %>/edit" class="btn btn-warning btn-sm">Editar</a>
                    <form action="/fornecedores/<%= fornecedor.id %>?_method=DELETE" method="POST"
                        style="display:inline;">
                        <button type="submit" class="btn btn-danger btn-sm">Excluir</button>
                    </form>
                </td>
            </tr>
            <% }) %>
    </tbody>
</table>